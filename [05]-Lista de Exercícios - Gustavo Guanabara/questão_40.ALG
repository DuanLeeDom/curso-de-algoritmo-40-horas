algoritmo "questão_40"
var
   N1, C: Inteiro
inicio

      //Implementado os Indentificadores
      N1 <- 0
      C <- 0

      //Repitir de 0 até 6 pulando de 3 em 3
      repita
            Escreva(N1)
            N1 <- N1 + 3
            C <- C + 1
      ate (C > 6)
      
      //Exibir na tela a mensagem
      Escreva(" Acabou!")
      
fimalgoritmo